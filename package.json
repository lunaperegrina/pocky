{
  "name": "pocky",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run --cwd apps/api dev\" \"bun run --cwd apps/web dev\"",
    "dev:api": "bun --cwd apps/api dev",
    "dev:web": "bun --cwd apps/web dev",
    "build": "bun run build:api && bun run build:web",
    "build:api": "bun --cwd apps/api build",
    "build:web": "bun --cwd apps/web build",
    "db:migrate": "bun --cwd packages/db migrate",
    "db:generate": "bun --cwd packages/db generate",
    "db:studio": "bun --cwd packages/db studio",
    "db:seed": "bun --cwd packages/db run seed",
    "lint": "bun run lint:api && bun run lint:web",
    "lint:api": "bun --cwd apps/api lint",
    "lint:web": "bun --cwd apps/web lint",
    "type-check": "bun run type-check:api && bun run type-check:web",
    "type-check:api": "bun --cwd apps/api type-check",
    "type-check:web": "bun --cwd apps/web type-check",
    "test": "bun run test:api && bun run test:web",
    "test:api": "bun --cwd apps/api test",
    "test:web": "bun --cwd apps/web test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
